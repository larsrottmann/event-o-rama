<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.eventorama.mobi.sowhatevernew"
	android:versionCode="1"
	android:versionName="1.0">
	<application
		android:label="@string/app_name"
		android:icon="@drawable/icon"
		android:name="com.eventorama.mobi.lib.EventORamaApplication">
		<activity
			android:label="@string/app_name"
			android:noHistory="true"
			android:name="com.eventorama.mobi.lib.StartActivity">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="com.eventorama.mobi.lib.PeopleActivity"></activity>

		<activity  android:noHistory="true"
			android:name="com.eventorama.mobi.lib.SignUpActivity"></activity>

		<activity
			android:name="com.eventorama.mobi.lib.EventStreamActivity"></activity>
			
		<activity
			android:name="com.eventorama.mobi.lib.EventCreationActivity"></activity>

		<provider android:name="com.eventorama.mobi.lib.content.EventStreamContentProvider" android:authorities="com.eventorama.mobi.sowhatevernew.events" android:exported="false" />
		<provider android:name="com.eventorama.mobi.lib.content.PeopleContentProvider" android:authorities="com.eventorama.mobi.sowhatevernew.people" android:exported="false" />

		<!-- Service for creating new activities -->	
		<service android:name="com.eventorama.mobi.lib.service.ActivityCreatorService" />

		<!-- Service for syncing the activities with the server -->	
		<service android:name="com.eventorama.mobi.lib.service.ActivitySyncService" />
		
		<!-- Service for syncing the users with the server -->	
		<service android:name="com.eventorama.mobi.lib.service.PeopleSyncService" />
		

		<!-- Only C2DM servers can send messages for the app. If permission is 
			not set - any other app can generate it -->
		<service
			android:name="com.eventorama.mobi.lib.c2dm.C2DMReceiver" />

		<!-- Only google service can send data messages for the app. If permission 
			is not set - any other app can generate it -->
		<receiver
			android:name="com.google.android.c2dm.C2DMBroadcastReceiver"
			android:permission="com.google.android.c2dm.permission.SEND">

			<!-- Receive the actual message -->
			<intent-filter>
				<action
					android:name="com.google.android.c2dm.intent.RECEIVE" />
				<category
					android:name="com.eventorama.mobi.sowhatevernew" />
			</intent-filter>
			<!-- Receive the registration id -->
			<intent-filter>
				<action
					android:name="com.google.android.c2dm.intent.REGISTRATION" />
				<category
					android:name="com.eventorama.mobi.sowhatevernew" />
			</intent-filter>
		</receiver>

	</application>
	
		<!-- Only this application can receive the messages and registration result -->
		<permission
			android:name="com.eventorama.mobi.sowhatevernew.permission.C2D_MESSAGE"
			android:protectionLevel="signature" />

		<uses-permission
			android:name="com.eventorama.mobi.sowhatevernew.permission.C2D_MESSAGE" />
	
	<uses-permission
		android:name="android.permission.GET_ACCOUNTS" />

	<uses-permission
		android:name="android.permission.WAKE_LOCK" />
	<uses-permission
		android:name="android.permission.INTERNET"></uses-permission>
	<!-- Google's push2device service -->
	<uses-permission
		android:name="com.google.android.c2dm.permission.RECEIVE" />


</manifest>
